<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#EFF3F2"
        android:padding="5dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="false"
        app:cardBackgroundColor="#607D8B">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Emp_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="2"
                    android:text="@string/textview" />

                <TextView
                    android:id="@+id/Emp_cnic"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="2"
                    android:text="@string/textview" />

                <TextView
                    android:id="@+id/Emp_age"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="2"
                    android:text="@string/textview" />

                <TextView
                    android:id="@+id/Emp_Adress"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="2"
                    android:text="@string/textview" />

                <TextView
                    android:id="@+id/Emp_roll"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="2"
                    android:text="@string/textview" />

                <TextView
                    android:id="@+id/Emp_Gender"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="2"
                    android:text="@string/textview" />

                <TextView
                    android:id="@+id/empsalary"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="2"
                    android:text="@string/textview" />

                <TextView
                    android:id="@+id/empPhon"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="2"
                    android:text="@string/textview" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/edit" />

                <ImageView
                    android:id="@+id/imgDel"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    app:srcCompat="@drawable/delete" />

                <ImageView
                    android:id="@+id/imgCall"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    app:srcCompat="@drawable/phone" />

                <ImageView
                    android:id="@+id/imgAdress"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    app:srcCompat="@drawable/location" />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
