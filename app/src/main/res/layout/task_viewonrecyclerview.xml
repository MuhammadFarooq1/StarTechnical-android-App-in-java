<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <androidx.cardview.widget.CardView
        android:layout_width="393dp"
        android:layout_height="187dp"
        android:layout_margin="10dp"
        android:background="#EFF3F2"
        android:padding="5dp"
        app:cardBackgroundColor="#263238"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="147dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="106dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/Taskid"
                    android:layout_width="85dp"
                    android:layout_height="51dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_horizontal|center_vertical" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="234dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Ass_To"
                    android:layout_width="215dp"
                    android:layout_height="68dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="start|center_horizontal|left|center_vertical"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/AssignDate"
                    android:layout_width="218dp"
                    android:layout_height="79dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:gravity="start|center_horizontal|left|center_vertical"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:layout_marginStart="350dp"
            android:layout_marginLeft="350dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ImgTedit"
                android:layout_width="39dp"
                android:layout_height="46dp"
                app:srcCompat="@drawable/edit" />

            <ImageView
                android:id="@+id/ImgT_Del"
                android:layout_width="39dp"
                android:layout_height="35dp"
                app:srcCompat="@drawable/delete" />

            <ImageView
                android:id="@+id/ImgSC_Call"
                android:layout_width="37dp"
                android:layout_height="35dp"
                app:srcCompat="@drawable/phone" />

            <ImageView
                android:id="@+id/ImgSC_Adress"
                android:layout_width="37dp"
                android:layout_height="35dp"
                app:srcCompat="@drawable/location" />
            <ImageView
                android:id="@+id/ImgSC_message"
                android:layout_width="37dp"
                android:layout_height="35dp"
                app:srcCompat="@drawable/messange" />

            <ImageView
                android:id="@+id/img_plus"
                android:layout_width="37dp"
                android:layout_height="36dp"
                app:srcCompat="@drawable/addplus" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>



