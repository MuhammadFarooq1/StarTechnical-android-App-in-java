<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="false"
        app:cardCornerRadius="20dp"
        android:background="#EFF3F2"
        android:padding="5dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#607D8B">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TvF_TaskNo"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="2"
                android:text="@string/textview" />

            <TextView
                android:id="@+id/TvF_Food"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="2"
                android:text="@string/textview" />

            <TextView
                android:id="@+id/TvF_petroll"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="2"
                android:text="@string/textview" />

            <TextView
                android:id="@+id/TvF_Acessories"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="2"
                android:text="@string/textview" />

            <TextView
                android:id="@+id/TvF_TotalAmount"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="2"
                android:text="@string/textview" />

            <TextView
                android:id="@+id/TvF_TotalProfit"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="2"
                android:text="@string/textview" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ImgSCedit"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                app:srcCompat="@drawable/edit" />

            <ImageView
                android:id="@+id/ImgSC_Del"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                app:srcCompat="@drawable/delete" />
        </LinearLayout>
    </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>